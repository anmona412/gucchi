<div class= "post-card">
  <%= link_to post_path(post.id), class:"post-link" do  %>
  <div class = "card-top">
    <div class = "card-top-left">
      <div class = "post-name">
        Name: <%= post.user.nickname%>
      </div>

      <div class = "post-age">
      <% if post.user.profile == nil %>
        Age: ---
      <% else %>
        Age: <strong class = "card-font"><%= post.user.profile.age.age%></strong>
      <% end %>

      </div>

      <div class = "post-profession">
        <% if post.user.profile == nil %>
          Profession: ---
        <% else %>
          Profession: <strong class = "card-font"><%= post.user.profile.profession.profession%></strong>
        <% end %>
      </div>
    </div>

    <div class = "card-top-right">
      <div class = "post-category">
        カテゴリ: <%= post.category.category%>
      </div>
      <div class ="post-tag">
        <ul class="tag">
          <li class="tag-list">
            <%post.tags.each do |tag| %>
              タグ#<%=tag.name%>
            <%end%>
          </li>
        </ul>
      </div>
    </div>
  </div>
  
  <div class = "card-bottom">
    <div class = "post-comment">
      <%= post.comment%>
    </div>
  </div>
  <% end %>
</div>