<header class='top-page-header'>
<div class ="wrapper">
  <div class = "header-wrapper">
    <div class = "header-left">
      <div class = "top-image">
        <%= link_to 'ぐっち', root_path, class:"top-image" %>
      </div>
    </div>

      <div class = "header-right">
        <div class = "user-top">
          <div class = "display-name">
            <% if user_signed_in? %>
              <%= current_user.nickname %>
            <% else %>
              ゲスト
            <% end %>
          </div>
        </div>
      

      <div class = "user-bottom">
        <% if user_signed_in? %>
          <%= link_to "プロフィール", user_path(current_user.id), class:"login-out"%>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"login-out"%>
        <% else %>
          <%= link_to 'ログイン', new_user_session_path, class:"login-out" %>
          <%= link_to '新規登録', new_user_registration_path,class:"login-out" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</header>