<%= render "shared/header" %>

<%= link_to '愚痴る', new_post_path, class:"#"%>
  <div class="post-box">
    <% @post.each do |post| %>
      <div class= "post-card">
        <%= post.user.nickname%>
        <%= post.user.profile.age.age%>
        <%= post.user.profile.profession.profession%>
        <%= link_to post_path(post.id) do %>
          <%= post.comment%>
        <% end %>
      </div>
    <% end %>
  </div>
<br>

